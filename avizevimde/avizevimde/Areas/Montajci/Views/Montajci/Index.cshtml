@model IEnumerable<avizevimde.Areas.Montajci.Models.montajci>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Montajci/Views/Shared/_Layout.cshtml";
}
            <div>
                    <ul class="breadcrumb">
                        <li>
                            @Html.ActionLink("Home", "Index", "MontajciAnasayfa")<span class="divider">/</span>
                        </li>
                        <li>
                            @Html.ActionLink("Montajcı", "Index", "Montajci")
                        </li>    
                    </ul>
            </div>   

			<div class="row-fluid sortable">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-th"></i>Montajcı</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
					<div class="box-content">
                  	<div class="row-fluid">
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                    <table>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.adi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.montajciAdi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.montajciTanim)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.montajciTelefon)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.montajciTelefon2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.montajciCepTelefonu)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.montajciEpostaAdresi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.eklenmeTarihi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.degistirmeTarihi)
                            </th>
                            <th></th>
                        </tr>

                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.adi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.montajciAdi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.montajciTanim)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.montajciTelefon)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.montajciTelefon2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.montajciCepTelefonu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.montajciEpostaAdresi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.eklenmeTarihi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.degistirmeTarihi)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                            </td>
                        </tr>
                    }

                    </table> 
                  	</div>                   
                  </div>
				</div><!--/span-->
			</div><!--/row-->
