@model IEnumerable<avizevimde.Areas.Montajci.Models.MontajciFatura>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Montajci/Views/Shared/_Layout.cshtml";
}

            <div>
                    <ul class="breadcrumb">
                        <li>
                            @Html.ActionLink("Home", "Index", "MontajciAnasayfa")<span class="divider">/</span>
                        </li>
                        <li>
                            @Html.ActionLink("Fatura", "Index", "MontajciFatura")
                        </li>    
                    </ul>
            </div>

			<div class="row-fluid sortable">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-th"></i>Montajcı</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
					<div class="box-content">
                  	<div class="row-fluid">

                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                    <table>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.montajci.adi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.adres.adresAdi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.vergiDairesi.adi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.vergiNumarasi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.eklenmeTarihi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.degistirilenId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.enYeni)
                            </th>
                            <th></th>
                        </tr>

                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.montajci.adi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.adres.adresAdi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vergiDairesi.adi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vergiNumarasi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.eklenmeTarihi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.degistirilenId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.enYeni)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                            </td>
                        </tr>
                    }

                    </table>
                  	</div>                   
                  </div>
				</div><!--/span-->
			</div><!--/row-->

