@model IEnumerable<avizevimde.Areas.Admin.Models.blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

   <div>
                    <ul class="breadcrumb">
                        <li>
                            @Html.ActionLink("Home", "Index", "AdminAnasayfa")<span class="divider">/</span>
                        </li>
                        <li>
                            @Html.ActionLink("Blog", "Index", "Blog")
                    </ul>
            </div>


			<div class="row-fluid sortable">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-th"></i>Blog</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
					<div class="box-content">
                  	<div class="row-fluid">
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                    <table>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.baslik)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.icerik)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.anahtarKelime)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.alt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.resim1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.resim2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.resim3)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.resim4)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.eklenmeTarihi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ekleyen.adminAdi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.degistirmeTarihi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.degistiren.adminAdi)
                            </th>
                            <th></th>
                        </tr>

                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.baslik)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.icerik)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.anahtarKelime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.alt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.resim1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.resim2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.resim3)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.resim4)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.eklenmeTarihi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ekleyen.adminAdi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.degistirmeTarihi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.degistiren.adminAdi)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                            </td>
                        </tr>
                    }

                    </table>

                  	</div>                   
                  </div>
				</div><!--/span-->
			</div><!--/row-->
