@model avizevimde.Areas.Admin.Models.mahalle

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
                                  <div>
                    <ul class="breadcrumb">
                        <li>
                            @Html.ActionLink("Home", "Index", "AdminAnasayfa")<span class="divider">/</span>
                        </li>
                        <li>
                            @Html.ActionLink("Mahalle", "Index", "Mahalle")<span class="divider">/</span>
                        </li>  
                        <li>
                            @Html.ActionLink("Düzenle", "Edit", "Mahalle")
                        </li>  
                    </ul>
            </div>
    
    
     			<div class="row-fluid sortable">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-edit"></i>Mahalle Düzenle</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
					<div class="box-content">
						<form class="form-horizontal">
                        <fieldset>
                            <legend>mahalle</legend>

                            @Html.HiddenFor(model => model.Id)

                            <div class="editor-label">
                                @Html.LabelFor(model => model.ilceId, "ilce")
                            </div>
                            <div class="editor-field">
                                @Html.DropDownList("ilceId", String.Empty)
                                @Html.ValidationMessageFor(model => model.ilceId)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.mahalleAdi)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.mahalleAdi)
                                @Html.ValidationMessageFor(model => model.mahalleAdi)
                            </div>

                            <p>
                                <input type="submit" value="Save" />
                            </p>
                        </fieldset>
						</form>
					</div>
				</div><!--/span-->

			</div><!--/row-->
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
